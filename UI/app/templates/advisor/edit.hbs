{{page-title "Edit"}}

 <div class="form-bg my-5">
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <div class="form-container">
                    <h3 class="title">{{if (eq this.model.id null) 'Create Advisor' 'Update Advisor'}}</h3>
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label>Full Name</label>
                            {{input value=this.model.fullName type="text" class="form-control"}}
                        </div>
                        <div class="form-group">
                            <label>SIN</label>
                            {{input  value=this.model.sin size=9 type="text" class="form-control"}}
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            {{input value=this.model.address type="text" class="form-control"}}
                        </div>
                        <div class="form-group">
                            <label>Phone Number</label>
                            {{input value=this.model.phoneNumber type="text" class="form-control"}}
                        </div>
                         {{input value=this.id type="hidden" class="form-control"}}
                        <button type="submit" {{on "click" this.save}} class="my-2 btn btn-secondary">{{if (eq this.model.id null) 'Create Advisor' 'Update Advisor'}}</button>
                        
                        <button {{on "click" this.gotoAdvisor}} type="button"  class="ml-2 btn btn-secondary">Go Back</button>
                        
                        <br/>
                        <ol class="error-warning">
                            {{{this.displayErrors}}}
                        </ol>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</div>
   
{{outlet}}